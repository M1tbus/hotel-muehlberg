---
import PublicLayout from '../layouts/PublicLayout.astro';
import PageHeader from '../components/sections/PageHeader.astro';

const phone = '+49 3542 875695';
const email = 'info@muehlberg-spreewald.de';
const bookingUrl = 'https://www.booking.com/hotel/de/pension-lubbenau.de.html';
---

<PublicLayout
  title="Kontakt – Hotel am Mühlberg Lübbenau"
  description="Kontaktieren Sie das Hotel am Mühlberg in Lübbenau/Spreewald. Anfragen per Telefon oder E-Mail. Zimmer buchen über Booking.com."
>
  <PageHeader tagline="Wir hören gerne von Ihnen" title="Kontakt" pattern="waves" />

  <section class="py-20 md:py-28">
    <div class="container-hotel">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 lg:gap-20">

        <!-- Erreichbarkeit -->
        <div>
          <p class="font-script text-2xl text-[var(--color-brown-400)] mb-2" aria-hidden="true">Erreichbarkeit</p>
          <h2 class="font-display text-3xl font-semibold text-[var(--color-brown-900)] mb-8 leading-tight">
            So erreichen Sie uns
          </h2>

          <dl class="space-y-6">
            <div class="flex gap-5 items-start">
              <dt class="flex-shrink-0" aria-hidden="true">
                <div class="w-10 h-10 border border-[var(--color-border)] flex items-center justify-center text-[var(--color-gold-500)]">
                  <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07A19.5 19.5 0 013.07 9.8 19.79 19.79 0 01.22 1.21a2 2 0 012-2.18h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8 8.09a16 16 0 006 6l.46-.46a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"/>
                  </svg>
                </div>
              </dt>
              <dd>
                <span class="block text-xs text-[var(--color-text-muted)] uppercase tracking-[0.1em] mb-1">Telefon</span>
                <a href={`tel:${phone.replace(/\s/g, '')}`} class="text-[var(--color-brown-900)] hover:text-[var(--color-gold-600)] font-medium transition-colors text-lg">
                  {phone}
                </a>
                <p class="text-xs text-[var(--color-text-muted)] mt-1">Erreichbar bis 22:00 Uhr</p>
              </dd>
            </div>

            <div class="flex gap-5 items-start">
              <dt class="flex-shrink-0" aria-hidden="true">
                <div class="w-10 h-10 border border-[var(--color-border)] flex items-center justify-center text-[var(--color-gold-500)]">
                  <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                    <polyline points="22,6 12,13 2,6"/>
                  </svg>
                </div>
              </dt>
              <dd>
                <span class="block text-xs text-[var(--color-text-muted)] uppercase tracking-[0.1em] mb-1">E-Mail</span>
                <a href={`mailto:${email}`} class="text-[var(--color-brown-900)] hover:text-[var(--color-gold-600)] font-medium transition-colors">
                  {email}
                </a>
              </dd>
            </div>

            <div class="flex gap-5 items-start">
              <dt class="flex-shrink-0" aria-hidden="true">
                <div class="w-10 h-10 border border-[var(--color-border)] flex items-center justify-center text-[var(--color-gold-500)]">
                  <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0118 0z"/>
                    <circle cx="12" cy="10" r="3"/>
                  </svg>
                </div>
              </dt>
              <dd>
                <span class="block text-xs text-[var(--color-text-muted)] uppercase tracking-[0.1em] mb-1">Adresse</span>
                <address class="not-italic text-[var(--color-brown-900)] font-medium leading-relaxed">
                  Luckauer Landstraße 12<br />
                  03222 Lübbenau/Spreewald<br />
                  Brandenburg
                </address>
              </dd>
            </div>

            <div class="flex gap-5 items-start">
              <dt class="flex-shrink-0" aria-hidden="true">
                <div class="w-10 h-10 border border-[var(--color-border)] flex items-center justify-center text-[var(--color-gold-500)]">
                  <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                    <line x1="16" y1="2" x2="16" y2="6"/>
                    <line x1="8" y1="2" x2="8" y2="6"/>
                    <line x1="3" y1="10" x2="21" y2="10"/>
                  </svg>
                </div>
              </dt>
              <dd>
                <span class="block text-xs text-[var(--color-text-muted)] uppercase tracking-[0.1em] mb-1">Check-in / Check-out</span>
                <p class="text-[var(--color-brown-900)] font-medium leading-relaxed">
                  Check-in: ab 15:00 Uhr<br />
                  Check-out: bis 10:00 Uhr<br />
                  <span class="text-sm text-[var(--color-text-muted)] font-normal">24/7 Selbst-Check-in mit Zugangscode möglich</span>
                </p>
              </dd>
            </div>
          </dl>

          <!-- Anreise -->
          <div class="mt-10 p-6 bg-[var(--color-surface-warm)] border border-[var(--color-border)]">
            <div class="flex items-start gap-4">
              <div class="w-5 h-5 text-[var(--color-gold-500)] flex-shrink-0 mt-0.5" aria-hidden="true">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="1" y="3" width="15" height="13" rx="1"/>
                  <path d="M16 8h4l3 3v5h-7V8z"/>
                  <circle cx="5.5" cy="18.5" r="2.5"/>
                  <circle cx="18.5" cy="18.5" r="2.5"/>
                </svg>
              </div>
              <div>
                <h3 class="font-display text-base font-semibold text-[var(--color-brown-900)] mb-1">Anreise mit dem Auto</h3>
                <p class="text-sm text-[var(--color-text-muted)] leading-relaxed">
                  Über die A13 oder A15, Ausfahrt <strong>Lübbenau</strong>.<br />
                  Von der Autobahn sind es nur wenige Minuten bis zum Hotel.<br />
                  Kostenfreies Parken auf dem Hotelgelände.
                </p>
              </div>
            </div>
          </div>

          <!-- Karriere-Hinweis -->
          <div class="mt-6 p-5 border border-[var(--color-gold-500)]/30 bg-[var(--color-surface-warm)]">
            <p class="text-sm text-[var(--color-text-muted)] leading-relaxed">
              <strong class="text-[var(--color-brown-900)]">Wir stellen ein!</strong> –
              Interesse an einer Stelle im Hotel am Mühlberg?
              <a href="/karriere" class="text-[var(--color-gold-600)] hover:text-[var(--color-gold-500)] font-medium ml-1 transition-colors">
                Zur Karriereseite →
              </a>
            </p>
          </div>
        </div>

        <!-- Anfrage & Buchung -->
        <div>
          <p class="font-script text-2xl text-[var(--color-brown-400)] mb-2" aria-hidden="true">Anfrage & Buchung</p>
          <h2 class="font-display text-3xl font-semibold text-[var(--color-brown-900)] mb-4 leading-tight">
            Zimmer & Veranstaltungen
          </h2>
          <p class="text-[var(--color-text-muted)] text-sm leading-relaxed mb-10">
            Für Zimmerbuchungen, Veranstaltungsanfragen, Gruppenreisen und Tagungen – sprechen Sie uns direkt an
            oder buchen Sie bequem online über Booking.com.
          </p>

          <div class="space-y-px">
            <!-- Direkte Anfrage -->
            <div class="p-7 bg-[var(--color-surface-warm)] border border-[var(--color-border)]">
              <h3 class="font-display text-lg font-semibold text-[var(--color-brown-900)] mb-1">Direkte Anfrage</h3>
              <p class="text-sm text-[var(--color-text-muted)] mb-5 leading-relaxed">
                Für Gruppen, Veranstaltungen, längere Aufenthalte und individuelle Wünsche – sprechen Sie uns persönlich an.
              </p>
              <div class="flex flex-col sm:flex-row gap-3">
                <a
                  href={`tel:${phone.replace(/\s/g, '')}`}
                  class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-[var(--color-brown-900)] hover:bg-[var(--color-gold-500)] text-white text-xs font-medium tracking-[0.12em] uppercase transition-colors"
                >
                  <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
                  </svg>
                  Jetzt anrufen
                </a>
                <a
                  href={`mailto:${email}?subject=Anfrage%20Hotel%20am%20M%C3%BChlberg`}
                  class="inline-flex items-center justify-center gap-2 px-6 py-3 border border-[var(--color-border)] hover:border-[var(--color-gold-500)] text-[var(--color-brown-700)] hover:text-[var(--color-brown-900)] text-xs font-medium tracking-[0.12em] uppercase transition-colors"
                >
                  Per E-Mail anfragen
                </a>
              </div>
            </div>

            <!-- Booking.com -->
            <div class="p-7 bg-white border border-[var(--color-border)]">
              <h3 class="font-display text-lg font-semibold text-[var(--color-brown-900)] mb-1">Zimmer buchen</h3>
              <p class="text-sm text-[var(--color-text-muted)] mb-5 leading-relaxed">
                Bequem online buchen mit sofortiger Bestätigung über Booking.com.
              </p>
              <a
                href={bookingUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-6 py-3 bg-[var(--color-gold-500)] hover:bg-[var(--color-gold-600)] text-white text-xs font-medium tracking-[0.12em] uppercase transition-colors"
              >
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
                </svg>
                Jetzt bei Booking.com buchen
              </a>
            </div>

            <!-- Veranstaltungen -->
            <div class="p-7 bg-[var(--color-surface-warm)] border border-[var(--color-border)]">
              <h3 class="font-display text-base font-semibold text-[var(--color-brown-900)] mb-2">Veranstaltungen & Gruppen</h3>
              <p class="text-sm text-[var(--color-text-muted)] leading-relaxed">
                Für Hochzeiten, Firmenfeiern, Tagungen, Betriebsausflüge und Gruppenreisen erstellen wir gerne ein
                individuelles Angebot – inklusive Catering aus unserem Restaurant. Kapazität bis 80 Personen.
              </p>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>
</PublicLayout>
