---
import PublicLayout from '../layouts/PublicLayout.astro';
import Hero from '../components/sections/Hero.astro';
import FeatureGrid from '../components/sections/FeatureGrid.astro';

// ── SVG Icons ─────────────────────────────────────────────────────────────
const iconBed  = `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M3 7v11m18-11v11M3 12h18M3 8a2 2 0 012-2h4a2 2 0 012 2v1H3V8zM13 8a2 2 0 012-2h4a2 2 0 012 2v1H13V8z"/></svg>`;
const iconTent = `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M2 20h20"/><path d="M12 4L4 20h16L12 4z"/><path d="M12 4v16"/><path d="M9 20l3-7 3 7"/></svg>`;
const iconFork = `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M3 2v7c0 1.1.9 2 2 2h4a2 2 0 002-2V2"/><path d="M7 2v20"/><path d="M21 15V2v0a5 5 0 00-5 5v6c0 1.1.9 2 2 2h3zm0 0v7"/></svg>`;
const iconBike = `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="6" cy="15" r="4"/><circle cx="18" cy="15" r="4"/><path d="M6 15l3-6h6l3 6"/><path d="M12 9V5"/><circle cx="12" cy="4" r="1"/></svg>`;
const iconLeaf = `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M11 20A7 7 0 014 13C4 7 11 4 11 4s7 3 7 9a7 7 0 01-7 7z"/><path d="M11 20V4"/></svg>`;
const iconCar  = `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M5 17H3a2 2 0 01-2-2v-4l2-6h14l2 6v4a2 2 0 01-2 2h-2"/><circle cx="7.5" cy="17.5" r="2.5"/><circle cx="16.5" cy="17.5" r="2.5"/></svg>`;

const features = [
  { icon: iconBed,  title: 'Komfortable Zimmer',   description: '37 Zimmer mit Bad, TV und WLAN – Einzel, Doppel, 3- und 4-Bettzimmer, alle inkl. Frühstück.' },
  { icon: iconTent, title: 'Campingplatz',          description: '50 Stellplätze (80–140 m²) direkt am Hotel, ideal für Rad- und Autotouristen.' },
  { icon: iconFork, title: 'Jagdstube',             description: 'Rustikales Restaurant für Events, Familienfeiern und Jagdgesellschaften. Frühstücksbuffet täglich 7–10 Uhr.' },
  { icon: iconBike, title: 'Radfahrerparadies',     description: 'Direkt an Radwegen, überdachte Stellplätze und E-Bike-Lademöglichkeiten.' },
  { icon: iconLeaf, title: 'Natur pur',             description: 'Eingang zum UNESCO-Biosphärenreservat Spreewald – Kahnfahrten, Wandern, Erleben.' },
  { icon: iconCar,  title: 'Ideal erreichbar',      description: 'Direkt an der A13/A15, Ausfahrt Lübbenau. 24/7 Check-in mit Zugangscode möglich.' },
];

const iconPresentation = `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M2 3h20"/><path d="M21 3v11a2 2 0 01-2 2H5a2 2 0 01-2-2V3"/><path d="M12 16v5"/><path d="M8 21h8"/><path d="M7 8h10"/><path d="M7 12h6"/></svg>`;
const iconFamily       = `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>`;
const iconCar2         = `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M5 17H3a2 2 0 01-2-2v-4l2-6h14l2 6v4a2 2 0 01-2 2h-2"/><circle cx="7.5" cy="17.5" r="2.5"/><circle cx="16.5" cy="17.5" r="2.5"/></svg>`;

const audiences = [
  { icon: iconBike,         title: 'Urlauber & Radtouristen', text: 'Direkt am Spreewald-Radweg. Überdachte Abstellplätze, E-Bike-Laden, Kahnfahrten am Lübbenauer Hafen.' },
  { icon: iconFamily,       title: 'Familien & Langzeitgäste', text: 'Geräumige Zimmer und Ferienwohnungen, Kinderbett auf Anfrage, Haustiere willkommen.' },
  { icon: iconPresentation, title: 'Tagungen & Gruppen', text: 'Jagdstube, Saal und Tagungsraum für Seminare, Betriebsausflüge und Feierlichkeiten bis 80 Personen.' },
  { icon: iconCar2,         title: 'Durchreisende', text: 'Direkt an A13/A15, Ausfahrt Lübbenau. 24/7 Check-in mit Zugangscode – ankommen wann Sie wollen.' },
];

const eventRooms = [
  {
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2z"/><path d="M9 22V12h6v10"/></svg>`,
    name: 'Jagdstube', capacity: 'bis 20 Personen',
    desc: 'Urige Atmosphäre für private Feiern, Familientreffen und kleine Firmenrunden.',
  },
  {
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="18" height="18" rx="1"/><path d="M3 9h18"/><path d="M9 21V9"/></svg>`,
    name: 'Saal', capacity: 'bis 80 Personen',
    desc: 'Großzügiger Veranstaltungssaal für Hochzeiten, Jubiläen, Vereinsfeste und Betriebsveranstaltungen.',
  },
  {
    icon: iconPresentation,
    name: 'Tagungsraum', capacity: 'bis 30 Personen',
    desc: 'Seminarraum für bis zu 30 Personen – ideal für Konferenzen, Schulungen und Workshops.',
  },
];

const events = [
  'Hochzeiten & Jubiläen',
  'Firmenseminare & Tagungen',
  'Betriebsausflüge',
  'Geburtstagsfeiern',
  'Vereinstreffen',
  'Jagdgesellschaften',
];

const photoStrip = [
  { src: '/images/bild-03.jpg', alt: 'Biergarten am Mühlberg' },
  { src: '/images/bild-zimmer-strip.jpg', alt: 'Komfortables Zimmer im Hotel Am Mühlberg' },
  { src: '/images/bild-08.jpg', alt: 'Jagdstube Am Mühlberg' },
  { src: '/images/bild-10.jpg', alt: 'Campingplatz am Mühlberg' },
];
---

<PublicLayout
  title="Hotel & Pension Am Mühlberg Lübbenau – Spreewald Urlaub, Camping & Feiern"
  description="Familiengeführtes Hotel direkt am Biosphärenreservat Spreewald. 37 Zimmer inkl. Frühstück, Campingplatz, Jagdstube & Saal für Events bis 80 Personen. Ideal für Radtouristen, Familien & Tagungen in Lübbenau."
>
  <Hero
    tagline="Willkommen im Spreewald"
    title="Hotel & Camping"
    titleLine2="mit Leidenschaft"
    subtitle="Familiengeführt seit über 30 Jahren mitten in Lübbenau – der ideale Ausgangspunkt für Kahnfahrten, Radtouren und unvergessliche Feiern im Biosphärenreservat Spreewald."
    ctaPrimary="Jetzt anfragen"
    ctaSecondary="Zimmer ansehen"
    ctaSecondaryHref="/hotel"
    imageSrc="/images/bild-01.jpg"
  />

  <!-- Highlights -->
  <section class="py-20 md:py-28 bg-[var(--color-surface-warm)] reveal-section" aria-labelledby="highlights-heading">
    <div class="container-hotel">
      <div class="text-center mb-14">
        <p class="font-script text-2xl text-[var(--color-brown-400)] mb-2" aria-hidden="true">Warum bei uns?</p>
        <h2 id="highlights-heading" class="font-display text-3xl md:text-4xl font-semibold text-[var(--color-brown-900)]">
          Alles für Ihren perfekten Aufenthalt
        </h2>
        <div class="w-8 h-px bg-[var(--color-gold-500)] mx-auto mt-5"></div>
      </div>
      <FeatureGrid features={features} columns={3} />
    </div>
  </section>

  <!-- Zielgruppen -->
  <section class="py-20 md:py-28 bg-white reveal-section" aria-labelledby="audience-heading">
    <div class="container-hotel">
      <div class="text-center mb-14">
        <p class="font-script text-2xl text-[var(--color-brown-400)] mb-2" aria-hidden="true">Für jeden das Richtige</p>
        <h2 id="audience-heading" class="font-display text-3xl md:text-4xl font-semibold text-[var(--color-brown-900)]">
          Wer bei uns besonders aufgehoben ist
        </h2>
        <div class="w-8 h-px bg-[var(--color-gold-500)] mx-auto mt-5"></div>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-px bg-[var(--color-border)]">
        {audiences.map(({ icon, title, text }, i) => (
          <div class="bg-[var(--color-surface-warm)] p-8 flex flex-col reveal-item" style={`--delay:${i * 80}ms`}>
            <div class="w-10 h-10 text-[var(--color-gold-500)] mb-5" aria-hidden="true" set:html={icon} />
            <h3 class="font-display font-semibold text-[var(--color-brown-900)] text-lg mb-3">{title}</h3>
            <div class="w-6 h-px bg-[var(--color-gold-500)] mb-4"></div>
            <p class="text-sm text-[var(--color-text-muted)] leading-relaxed flex-1">{text}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Familiengeführt -->
  <section class="py-20 md:py-28 bg-[var(--color-surface-warm)] reveal-section" aria-labelledby="about-heading">
    <div class="container-hotel">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">

        <div>
          <p class="font-script text-2xl text-[var(--color-brown-400)] mb-2" aria-hidden="true">Herzlich willkommen</p>
          <h2 id="about-heading" class="font-display text-3xl md:text-4xl font-semibold text-[var(--color-brown-900)] mb-6 leading-tight">
            Familiengeführt mit Herz
          </h2>
          <div class="w-8 h-px bg-[var(--color-gold-500)] mb-8"></div>
          <p class="text-[var(--color-text-muted)] leading-relaxed mb-4">
            Das Hotel am Mühlberg liegt am Rande des Luftkurortes Lübbenau, direkt am Eingang zum
            Biosphärenreservat Spreewald. Was vor über 30 Jahren begann, ist heute ein lebendiges
            Familienunternehmen – mit echtem Herz, persönlichem Service und dem Anspruch,
            jeden Gast wie einen Freund zu empfangen.
          </p>
          <p class="text-[var(--color-text-muted)] leading-relaxed mb-10">
            Ob entspannte Radtour, Kahnfahrt im Spreewald, Tagung oder Familienfeier –
            wir sind Ihr idealer Ausgangspunkt und verlässlicher Gastgeber.
          </p>
          <div class="flex flex-col sm:flex-row gap-3">
            <a href="/hotel" class="inline-flex items-center gap-2 px-7 py-3.5 bg-[var(--color-brown-900)] hover:bg-[var(--color-gold-500)] text-white text-xs font-medium tracking-[0.12em] uppercase transition-colors">
              Unsere Zimmer
            </a>
            <a href="tel:+493542875695"
               class="inline-flex items-center gap-2 px-7 py-3.5 border border-[var(--color-border)] hover:border-[var(--color-gold-500)] text-[var(--color-brown-700)] hover:text-[var(--color-brown-900)] text-xs font-medium tracking-[0.12em] uppercase transition-colors">
              <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
              </svg>
              +49 3542 875695
            </a>
          </div>
        </div>

        <!-- 2 Hochformat-Bilder versetzt -->
        <!-- Mobile: nebeneinander als echte Hochformate -->
        <div class="grid grid-cols-2 gap-2 lg:hidden">
          <div
            class="border border-[var(--color-gold-500)]/30 bg-cover bg-top bg-no-repeat"
            style="aspect-ratio: 2/3; background-image: url('/images/bild-hochzeit.jpg');"
            role="img" aria-label="Hochzeit im Hotel Am Mühlberg"
          />
          <div
            class="border border-[var(--color-gold-500)]/30 bg-cover bg-center bg-no-repeat mt-8"
            style="aspect-ratio: 2/3; background-image: url('/images/bild-drache.webp');"
            role="img" aria-label="Pinker Drache vor dem Hotel Am Mühlberg"
          />
        </div>
        <!-- Desktop: versetztes Layout -->
        <div class="hidden lg:block relative h-[640px]">
          <div
            class="absolute top-0 left-0 w-[58%] h-[75%] border border-[var(--color-gold-500)]/30 bg-cover bg-top bg-no-repeat"
            style="background-image: url('/images/bild-hochzeit.jpg');"
            role="img" aria-label="Hochzeit im Hotel Am Mühlberg"
          />
          <div
            class="absolute bottom-0 right-0 w-[58%] h-[75%] border border-[var(--color-gold-500)]/30 bg-cover bg-center bg-no-repeat"
            style="background-image: url('/images/bild-drache.webp');"
            role="img" aria-label="Pinker Drache vor dem Hotel Am Mühlberg"
          />
        </div>

      </div>
    </div>
  </section>

  <!-- Inhaber-Testimonial -->
  <section class="py-20 md:py-28 bg-[var(--color-brown-900)] reveal-section" aria-label="Inhaber-Zitat">
    <div class="container-hotel">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-0 items-stretch">

        <div class="overflow-hidden min-h-[360px] lg:min-h-0">
          <img src="/images/bild-chef.png" alt="Inhaber und Küchenchef des Hotel Am Mühlberg"
            class="w-full h-full object-cover object-top" loading="lazy" />
        </div>

        <div class="flex flex-col justify-center p-10 md:p-16 bg-[var(--color-brown-900)]">
          <div class="font-display text-8xl text-[var(--color-gold-500)]/20 leading-none -mb-4 select-none" aria-hidden="true">"</div>
          <blockquote class="font-display text-xl md:text-2xl lg:text-3xl font-medium text-white leading-relaxed italic mb-8">
            Unser Haus ist meine Leidenschaft. Ich gebe mit meinem Team und meiner Familie alles, damit Sie sich bei uns wohlfühlen – vom ersten Moment bis zur Abreise.
          </blockquote>
          <div class="w-8 h-px bg-[var(--color-gold-500)] mb-5"></div>
          <div>
            <p class="text-white font-medium text-sm mb-0.5">Jörg Teller – Inhaber, Hotel & Pension Am Mühlberg</p>
            <p class="text-xs text-[var(--color-gold-300)] uppercase tracking-[0.12em]">Lübbenau / Spreewald</p>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- Veranstaltungen & Räumlichkeiten -->
  <section class="py-20 md:py-28 bg-[var(--color-surface-warm)] reveal-section" aria-labelledby="events-heading">
    <div class="container-hotel">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-start">
        <div>
          <p class="font-script text-2xl text-[var(--color-brown-400)] mb-2" aria-hidden="true">Feiern & Tagen</p>
          <h2 id="events-heading" class="font-display text-3xl md:text-4xl font-semibold text-[var(--color-brown-900)] mb-3 leading-tight">
            Räume für jeden Anlass
          </h2>
          <div class="w-8 h-px bg-[var(--color-gold-500)] mb-8"></div>
          <div class="space-y-px">
            {eventRooms.map(({ icon, name, capacity, desc }) => (
              <div class="flex gap-5 p-6 bg-white reveal-item">
                <div class="w-8 h-8 text-[var(--color-gold-500)] flex-shrink-0 mt-0.5" aria-hidden="true" set:html={icon} />
                <div>
                  <div class="flex items-baseline gap-3 mb-1.5">
                    <h3 class="font-display font-semibold text-[var(--color-brown-900)] text-lg">{name}</h3>
                    <span class="text-xs text-[var(--color-text-muted)] tracking-wide">{capacity}</span>
                  </div>
                  <p class="text-sm text-[var(--color-text-muted)] leading-relaxed">{desc}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
        <div class="lg:pt-16">
          <h3 class="font-display font-semibold text-[var(--color-brown-900)] text-xl mb-6">
            Veranstaltungen, die wir ausrichten
          </h3>
          <ul class="grid grid-cols-1 sm:grid-cols-2 gap-px bg-[var(--color-border)] mb-10" role="list">
            {events.map((e) => (
              <li class="flex items-center gap-3 p-4 bg-white text-sm text-[var(--color-text-muted)]">
                <div class="w-1 h-4 bg-[var(--color-gold-500)] flex-shrink-0"></div>
                {e}
              </li>
            ))}
          </ul>
          <p class="text-sm text-[var(--color-text-muted)] leading-relaxed mb-6">
            Sprechen Sie uns an – wir planen gerne gemeinsam mit Ihnen Ihr individuelles Event,
            inklusive Catering aus unserer Jagdstube.
          </p>
          <a href="/kontakt" class="inline-flex items-center gap-2 px-7 py-3.5 bg-[var(--color-brown-900)] hover:bg-[var(--color-gold-500)] text-white text-xs font-medium tracking-[0.12em] uppercase transition-colors">
            Veranstaltung anfragen
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Photo strip -->
  <div class="grid grid-cols-2 md:grid-cols-4" aria-hidden="true">
    {photoStrip.map(({ src, alt }) => (
      <div class="photo-strip-cell">
        <img src={src} alt={alt} loading="lazy" />
      </div>
    ))}
  </div>

  <!-- Recruiting Banner -->
  <div class="bg-[var(--color-brown-800)] py-4 px-6" role="complementary" aria-label="Stellenangebot">
    <div class="container-hotel grid grid-cols-1 md:grid-cols-3 items-center gap-2 md:gap-4">
      <!-- Links: Label -->
      <span class="text-[var(--color-gold-300)] font-medium text-sm text-center md:text-left">
        Wir suchen Verstärkung
      </span>
      <!-- Mitte: Text -->
      <p class="text-white/70 text-sm text-center">
        Housekeeping, Rezeption, Service &amp; mehr – Quereinsteiger herzlich willkommen
      </p>
      <!-- Rechts: Button -->
      <div class="flex justify-center md:justify-end">
        <a href="/karriere"
          class="inline-flex items-center gap-1.5 px-5 py-2 border border-[var(--color-gold-500)]/50 hover:border-[var(--color-gold-500)] text-[var(--color-gold-300)] text-xs font-medium tracking-[0.12em] uppercase transition-colors">
          Mehr erfahren
        </a>
      </div>
    </div>
  </div>

  <!-- CTA Banner -->
  <section class="py-20 bg-[var(--color-brown-900)] reveal-section" aria-labelledby="cta-heading">
    <div class="container-hotel text-center">
      <p class="font-script text-3xl text-[var(--color-gold-300)] mb-2" aria-hidden="true">Planen Sie Ihren Aufenthalt</p>
      <h2 id="cta-heading" class="font-display text-3xl md:text-4xl font-semibold text-white mb-4">
        Wir freuen uns auf Ihren Besuch
      </h2>
      <p class="text-white/60 mb-10 max-w-lg mx-auto text-sm leading-relaxed">
        Kontaktieren Sie uns direkt – oder buchen Sie Ihr Zimmer bequem online über Booking.com.
      </p>
      <div class="flex flex-col sm:flex-row gap-3 justify-center">
        <a href="/kontakt" class="inline-flex items-center gap-2 px-8 py-3.5 bg-[var(--color-gold-500)] hover:bg-[var(--color-gold-600)] text-white text-xs font-medium tracking-[0.12em] uppercase transition-colors">
          Jetzt anfragen
        </a>
        <a href="https://www.booking.com/hotel/de/pension-lubbenau.de.html"
          target="_blank" rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-8 py-3.5 border border-white/20 hover:border-white/40 text-white/70 hover:text-white text-xs font-medium tracking-[0.12em] uppercase transition-colors">
          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
          </svg>
          Bei Booking.com buchen
        </a>
      </div>
    </div>
  </section>
</PublicLayout>

<script>
  if ('IntersectionObserver' in window && !window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.12, rootMargin: '0px 0px -40px 0px' });
    document.querySelectorAll('.reveal-section').forEach((el) => observer.observe(el));
    document.querySelectorAll('.reveal-item').forEach((el) => observer.observe(el));
  } else {
    document.querySelectorAll('.reveal-section, .reveal-item').forEach((el) => {
      el.classList.add('is-visible');
    });
  }
</script>

<style>
  .photo-strip-cell {
    display: block;
    width: 100%;
    aspect-ratio: 4 / 3;
    overflow: hidden;
    line-height: 0;
  }
  .photo-strip-cell img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  @media (prefers-reduced-motion: no-preference) {
    .reveal-section {
      opacity: 0;
      transition: opacity 0.8s ease;
    }
    .reveal-section.is-visible { opacity: 1; }
    .reveal-item {
      opacity: 0;
      transition: opacity 0.6s ease calc(var(--delay, 0ms));
    }
    .reveal-item.is-visible { opacity: 1; }
  }
</style>
