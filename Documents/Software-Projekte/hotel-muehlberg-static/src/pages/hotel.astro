---
import PublicLayout from '../layouts/PublicLayout.astro';
import PageHeader from '../components/sections/PageHeader.astro';

const rooms = [
  {
    name: 'Einzelzimmer',
    description: 'Komfortables Zimmer mit Dusche/WC, TV und kostenlosem WLAN. Ideal für Alleinreisende.',
    price: '69,00 €',
    priceNote: 'pro Person/Nacht',
    imageSrc: '/images/bild-05.png',
    features: ['Dusche/WC', 'TV', 'WLAN', 'Schreibtisch'],
  },
  {
    name: 'Doppelzimmer',
    description: 'Geräumiges Doppelzimmer für zwei Personen mit Dusche/WC, TV und Blick in den Garten.',
    price: '60,00 €',
    priceNote: 'pro Person/Nacht',
    imageSrc: '/images/bild-06.jpg',
    features: ['Dusche/WC', 'TV', 'WLAN', 'Gartenblick'],
    highlight: true,
  },
  {
    name: '3-Bettzimmer',
    description: 'Ideal für Familien oder Gruppen – geräumiges Zimmer mit drei Betten, Dusche/WC und WLAN.',
    price: '46,67 €',
    priceNote: 'pro Person/Nacht',
    imageSrc: '/images/bild-07.png',
    features: ['Dusche/WC', 'TV', 'WLAN', '3 Betten'],
  },
  {
    name: '4-Bettzimmer',
    description: 'Großzügiges Familienzimmer für bis zu vier Personen – ideal für Familien und Gruppen.',
    price: '40,00 €',
    priceNote: 'pro Person/Nacht',
    imageSrc: '/images/bild-07b.jpg',
    features: ['Dusche/WC', 'TV', 'WLAN', '4 Betten'],
  },
];

const amenities = [
  {
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M18 8h1a4 4 0 010 8h-1"/><path d="M2 8h16v9a4 4 0 01-4 4H6a4 4 0 01-4-4V8z"/><line x1="6" y1="1" x2="6" y2="4"/><line x1="10" y1="1" x2="10" y2="4"/><line x1="14" y1="1" x2="14" y2="4"/></svg>`,
    text: 'Frühstücksbuffet (7–10 Uhr)',
  },
  {
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12.55a11 11 0 0114.08 0"/><path d="M1.42 9a16 16 0 0121.16 0"/><path d="M8.53 16.11a6 6 0 016.95 0"/><circle cx="12" cy="20" r="1" fill="currentColor"/></svg>`,
    text: 'Kostenloses WLAN im ganzen Haus',
  },
  {
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="1" y="3" width="15" height="13" rx="1"/><path d="M16 8h4l3 3v5h-7V8z"/><circle cx="5.5" cy="18.5" r="2.5"/><circle cx="18.5" cy="18.5" r="2.5"/></svg>`,
    text: 'Kostenfreies Parken',
  },
  {
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M20.84 4.61a5.5 5.5 0 00-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 00-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 000-7.78z"/></svg>`,
    text: 'Haustiere willkommen (10 €/Nacht)',
  },
  {
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="6" cy="15" r="4"/><circle cx="18" cy="15" r="4"/><path d="M6 15l3-6h6l3 6"/><path d="M12 9V5"/><circle cx="12" cy="4" r="1" fill="currentColor"/></svg>`,
    text: 'Überdachte Fahrradabstellplätze',
  },
  {
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M17 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 00-3-3.87"/><path d="M16 3.13a4 4 0 010 7.75"/></svg>`,
    text: 'Kinderbett auf Anfrage (5 €/Nacht)',
  },
  {
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="1" y="4" width="22" height="16" rx="2" ry="2"/><line x1="1" y1="10" x2="23" y2="10"/></svg>`,
    text: 'Zahlung mit Karte möglich',
  },
  {
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M12 8v4l3 3"/></svg>`,
    text: 'Barrierearmes Zimmer vorhanden',
  },
];
---

<PublicLayout
  title="Zimmer & Preise – Hotel am Mühlberg Lübbenau"
  description="Entdecken Sie unsere komfortablen Einzel- und Doppelzimmer sowie Mehrbettzimmer im Hotel am Mühlberg in Lübbenau/Spreewald. Preise inkl. Frühstücksbuffet."
>
  <PageHeader tagline="Komfort & Natur" title="Hotel & Zimmer" pattern="waves" />

  <!-- Intro -->
  <section class="py-16 bg-white">
    <div class="container-hotel max-w-3xl mx-auto text-center">
      <p class="text-lg text-[var(--color-text-muted)] leading-relaxed">
        Unser familiengeführtes Hotel bietet 37 komfortable Zimmer – vom Einzel- bis zum 4-Bettzimmer – mit allem, was Sie für einen erholsamen Aufenthalt benötigen. Alle Preise verstehen sich pro Person und Nacht inklusive Frühstücksbuffet.
      </p>
    </div>
  </section>

  <!-- Rooms -->
  <section class="pb-20 bg-white" aria-labelledby="rooms-heading">
    <div class="container-hotel">
      <div class="text-center mb-14">
        <p class="font-script text-2xl text-[var(--color-brown-400)] mb-2" aria-hidden="true">Unsere Unterkunft</p>
        <h2 id="rooms-heading" class="font-display text-3xl md:text-4xl font-semibold text-[var(--color-brown-900)]">
          Zimmer & Ferienwohnungen
        </h2>
        <div class="w-8 h-px bg-[var(--color-gold-500)] mx-auto mt-5"></div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-px bg-[var(--color-border)] md:mt-7">
        {rooms.map(({ name, description, price, priceNote, imageSrc, features, highlight }) => (
          <article
            class:list={[
              'bg-[var(--color-surface-warm)] flex flex-col',
              highlight ? 'relative ring-1 ring-[var(--color-gold-500)]' : '',
            ]}
            aria-label={name}
          >
            {highlight && (
              <div class="text-xs font-medium text-center py-1.5 tracking-[0.1em] uppercase bg-[var(--color-gold-500)] text-white md:absolute md:inset-x-0 md:top-0 md:-translate-y-full">
                Beliebteste Wahl
              </div>
            )}
            <div
              class="border border-[var(--color-gold-500)]/30 bg-cover bg-center bg-no-repeat"
              style={`aspect-ratio: 4/3; background-image: url('${imageSrc}');`}
              role="img"
              aria-label={`${name} im Hotel am Mühlberg`}
            />
            <div class="p-7 flex flex-col flex-1">
              <h3 class="font-display text-xl font-semibold text-[var(--color-brown-900)] mb-2">{name}</h3>
              <p class="text-sm text-[var(--color-text-muted)] mb-5 leading-relaxed flex-1">{description}</p>

              <ul class="flex flex-wrap gap-2 mb-6" aria-label="Ausstattung">
                {features.map((f) => (
                  <li class="text-xs bg-white text-[var(--color-brown-700)] px-2.5 py-1 border border-[var(--color-border)] font-medium">
                    {f}
                  </li>
                ))}
              </ul>

              <div class="pt-4 border-t border-[var(--color-border)]">
                <div class="mb-4">
                  <span class="text-2xl font-semibold text-[var(--color-brown-800)] font-display">{price}</span>
                  <span class="text-xs text-[var(--color-text-muted)] ml-1.5">{priceNote}</span>
                </div>
                <div class="flex flex-col gap-2">
                  <a href="/kontakt" class="inline-flex items-center justify-center gap-1.5 w-full py-2.5 bg-[var(--color-brown-900)] hover:bg-[var(--color-gold-500)] text-white text-xs font-medium tracking-[0.1em] uppercase transition-colors">
                    Anfragen
                  </a>
                  <a
                    href="https://www.booking.com/hotel/de/pension-lubbenau.de.html"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center justify-center gap-1.5 w-full py-2.5 border border-[var(--color-border)] hover:border-[var(--color-gold-500)] text-[var(--color-brown-700)] hover:text-[var(--color-brown-900)] text-xs font-medium tracking-[0.1em] uppercase transition-colors"
                  >
                    Booking.com
                  </a>
                </div>
              </div>
            </div>
          </article>
        ))}
      </div>

      <p class="mt-8 text-sm text-[var(--color-text-muted)] text-center max-w-2xl mx-auto">
        * Alle Preise pro Person/Nacht, inkl. Frühstücksbuffet, zzgl. Kurbeitrag. Jahresdurchschnittspreise – saisonale Abweichungen vorbehalten. –
        <a href="/kontakt" class="text-[var(--color-gold-600)] hover:underline">Aktuelle Preise anfragen →</a>
      </p>
    </div>
  </section>

  <!-- Amenities -->
  <section class="py-20 md:py-28 bg-[var(--color-surface-warm)]" aria-labelledby="amenities-heading">
    <div class="container-hotel">
      <div class="text-center mb-14">
        <p class="font-script text-2xl text-[var(--color-brown-400)] mb-2" aria-hidden="true">Für Ihren Komfort</p>
        <h2 id="amenities-heading" class="font-display text-3xl md:text-4xl font-semibold text-[var(--color-brown-900)]">
          Unsere Ausstattung
        </h2>
        <div class="w-8 h-px bg-[var(--color-gold-500)] mx-auto mt-5"></div>
      </div>

      <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-px bg-[var(--color-border)]" role="list">
        {amenities.map(({ icon, text }) => (
          <li class="flex items-start gap-4 p-6 bg-white hover:bg-[var(--color-surface-warm)] transition-colors">
            <div class="w-5 h-5 text-[var(--color-gold-500)] flex-shrink-0 mt-0.5" aria-hidden="true" set:html={icon} />
            <span class="text-sm text-[var(--color-text-muted)] leading-snug">{text}</span>
          </li>
        ))}
      </ul>
    </div>
  </section>

  <!-- Rezeption & Check-in/out -->
  <section class="py-20 bg-white" aria-labelledby="reception-heading">
    <div class="container-hotel">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">

        <!-- Öffnungszeiten -->
        <div>
          <div class="flex items-center gap-3 mb-6">
            <div class="w-1 h-5 bg-[var(--color-gold-500)] flex-shrink-0"></div>
            <h2 id="reception-heading" class="font-display font-semibold text-[var(--color-brown-900)] text-xl">
              Öffnungszeiten Rezeption
            </h2>
          </div>
          <table class="w-full text-sm border-collapse">
            <tbody>
              {[
                ['Montag – Freitag', '07:00 – 16:00 Uhr'],
                ['Samstag',          '08:00 – 16:00 Uhr'],
                ['Sonntag',          '08:00 – 12:00 Uhr'],
              ].map(([day, time]) => (
                <tr class="border-b border-[var(--color-border)]">
                  <td class="py-3 text-[var(--color-brown-700)] font-medium pr-8">{day}</td>
                  <td class="py-3 text-[var(--color-text-muted)]">{time}</td>
                </tr>
              ))}
            </tbody>
          </table>
          <div class="mt-6 bg-[var(--color-surface-warm)] border border-[var(--color-border)] p-5 text-sm text-[var(--color-text-muted)] leading-relaxed space-y-2">
            <p>
              <span class="font-medium text-[var(--color-brown-800)]">24/7 Check-in möglich:</span>{' '}
              Außerhalb der Rezeptionszeiten erhalten Sie einen persönlichen Zugangscode.
            </p>
            <p>Telefonisch erreichbar täglich bis 22:00 Uhr, in Ausnahmefällen auch rund um die Uhr.</p>
          </div>
        </div>

        <!-- Check-in / Check-out -->
        <div>
          <div class="flex items-center gap-3 mb-6">
            <div class="w-1 h-5 bg-[var(--color-gold-500)] flex-shrink-0"></div>
            <h2 class="font-display font-semibold text-[var(--color-brown-900)] text-xl">
              Check-in & Check-out
            </h2>
          </div>
          <div class="grid grid-cols-2 gap-px bg-[var(--color-border)] mb-6">
            <div class="bg-[var(--color-surface-warm)] p-6 text-center">
              <p class="text-xs uppercase tracking-[0.1em] text-[var(--color-brown-700)] mb-2">Check-in</p>
              <p class="font-display text-3xl font-semibold text-[var(--color-brown-900)]">15:00</p>
              <p class="text-xs text-[var(--color-text-muted)] mt-1">Uhr</p>
            </div>
            <div class="bg-[var(--color-surface-warm)] p-6 text-center">
              <p class="text-xs uppercase tracking-[0.1em] text-[var(--color-brown-700)] mb-2">Check-out</p>
              <p class="font-display text-3xl font-semibold text-[var(--color-brown-900)]">10:00</p>
              <p class="text-xs text-[var(--color-text-muted)] mt-1">Uhr</p>
            </div>
          </div>
          <ul class="space-y-2 text-sm text-[var(--color-text-muted)]">
            <li class="flex items-start gap-2">
              <div class="w-1 h-4 bg-[var(--color-gold-500)] flex-shrink-0 mt-0.5"></div>
              Frühstücksbuffet täglich 07:00 – 10:00 Uhr
            </li>
            <li class="flex items-start gap-2">
              <div class="w-1 h-4 bg-[var(--color-gold-500)] flex-shrink-0 mt-0.5"></div>
              Haustiere willkommen (10 € / Nacht)
            </li>
            <li class="flex items-start gap-2">
              <div class="w-1 h-4 bg-[var(--color-gold-500)] flex-shrink-0 mt-0.5"></div>
              Kostenfreies Parken direkt am Hotel
            </li>
            <li class="flex items-start gap-2">
              <div class="w-1 h-4 bg-[var(--color-gold-500)] flex-shrink-0 mt-0.5"></div>
              Zahlung mit Karte möglich
            </li>
          </ul>
        </div>

      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-[var(--color-brown-900)]" aria-labelledby="cta-hotel-heading">
    <div class="container-hotel text-center">
      <p class="font-script text-3xl text-[var(--color-gold-300)] mb-2" aria-hidden="true">Wir freuen uns auf Sie</p>
      <h2 id="cta-hotel-heading" class="font-display text-3xl md:text-4xl font-semibold text-white mb-4">
        Jetzt Zimmer anfragen
      </h2>
      <p class="text-white/60 mb-10 max-w-lg mx-auto text-sm leading-relaxed">
        Kontaktieren Sie uns direkt – oder buchen Sie Ihr Zimmer bequem online über Booking.com.
      </p>
      <div class="flex flex-col sm:flex-row gap-3 justify-center">
        <a href="/kontakt" class="inline-flex items-center gap-2 px-8 py-3.5 bg-[var(--color-gold-500)] hover:bg-[var(--color-gold-600)] text-white text-xs font-medium tracking-[0.12em] uppercase transition-colors">
          Jetzt anfragen
        </a>
        <a
          href="https://www.booking.com/hotel/de/pension-lubbenau.de.html"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-8 py-3.5 border border-white/20 hover:border-white/40 text-white/70 hover:text-white text-xs font-medium tracking-[0.12em] uppercase transition-colors"
        >
          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
          </svg>
          Bei Booking.com buchen
        </a>
      </div>
    </div>
  </section>
</PublicLayout>
