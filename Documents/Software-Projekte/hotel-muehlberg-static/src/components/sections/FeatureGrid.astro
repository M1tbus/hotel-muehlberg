---
interface Feature {
  icon: string;
  title: string;
  description: string;
}

interface Props {
  features: Feature[];
  columns?: 2 | 3 | 4;
}

const { features, columns = 3 } = Astro.props;

const gridClass = {
  2: 'sm:grid-cols-2',
  3: 'sm:grid-cols-2 lg:grid-cols-3',
  4: 'sm:grid-cols-2 lg:grid-cols-4',
}[columns];
---

<ul class={`grid grid-cols-1 ${gridClass} gap-px bg-[var(--color-border)]`} role="list">
  {features.map(({ icon, title, description }) => (
    <li class="flex flex-col items-start gap-4 p-7 bg-[var(--color-surface-warm)] hover:bg-white transition-colors">
      <div
        class="w-10 h-10 text-[var(--color-brown-600)] flex-shrink-0"
        aria-hidden="true"
        set:html={icon}
      />
      <div>
        <h3 class="font-display text-lg font-semibold text-[var(--color-brown-900)] mb-2">{title}</h3>
        <p class="text-sm text-[var(--color-text-muted)] leading-relaxed">{description}</p>
      </div>
    </li>
  ))}
</ul>
